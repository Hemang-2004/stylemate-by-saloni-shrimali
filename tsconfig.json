{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  // Set baseUrl to the root
    "paths": {
      "@/*": ["./src/*"]  // Alias @ to point to the src folder
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "components/testimonials.jsx", "app/how-stylemate/page.jsx", "app/blog/page.jsx", "components/write-blog.tsx", "components/ui/textarea.tsx", "components/ui/input.tsx", "components/ui/select.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
